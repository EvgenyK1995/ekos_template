.btn
  align-items center
  background-color #81B0DA
  color #fff
  display flex
  font-size 14px
  font-weight bold
  height 55px
  justify-content center
  text-decoration none
  width 155px

  &-to-products
    margin-top 60px

  &-to-about
    margin-top 40px

  &:hover
    background-color #63A5E0

.contacts
  background-color #333
  box-sizing border-box
  display block
  padding 100px 65px
  position relative
  width 100%
  @media (max-width 768px)
    padding 30px 20px

  .title
    color #fff
    font-size 48px
    font-weight normal
    max-width 500px
    min-width 320px
    @media (max-width 768px)
      box-sizing border-box
      font-size 24px
      min-width auto
      width 100%

  &-map
    display block
    height 100%
    left 0
    position absolute
    top 0
    width 100%
    z-index 10

  &-info
    display flex
    position relative
    z-index 50

/** Front page **/



/** Contacts form style **/
.wpcf7
  &-form
    box-sizing border-box
    max-width 320px
    @media (max-width 768px)
      width 100%

    label
      color #fff
      font-size 14px
      font-weight bold

    &-control
      background none
      border none
      border-bottom 1px solid #fff
      box-sizing border-box
      color #fff
      height 40px
      max-width 320px
      padding-left 10px
      @media (max-width 768px)
        width 100%

      &:active
      &:focus
        outline none

  &-submit
    background-color #81B0DA
    border none
    color #fff
    cursor pointer
    font-size 14px
    font-weight bold
    height 55px
    letter-spacing 0.05em
    text-transform uppercase
    width 155px
    @media (max-width 768px)
      width 155px

    &:hover
      background-color #63A5E0

  &-validation-errors
  &-acceptance-missing
    border 1px solid #ded769 !important
    border-radius 5px
    color #fff
    margin 2em 0 1em !important
    padding 0.5em 1em !important

  &-response-output
    border 1px solid #f52929 !important
    border-radius 5px
    color #fff
    margin 2em 0 1em !important
    padding 0.5em 1em !important

  &-mail-sent-ok
    border 1px solid #398f14 !important
    border-radius 5px
    color #fff
    margin 2em 0 1em !important
    padding 0.5em 1em !important

.to-privacy
  box-sizing border-box
  color #fff
  font-size 14px
  font-weight 500
  max-width 320px

  a
    color #fff

