  align-items center
  display flex
  justify-content left
  min-height 720px
  width 100%
  @media (max-width 768px)
    padding-top 50px
    min-height 100%

  &-info
    align-items flex-start
    box-sizing border-box
    display flex
    flex-direction column
    padding 0 65px
    width 100%
    @media (max-width 768px)
      box-sizing border-box
      padding 20px

    .title
      color #fff
      font-size 48px
      font-weight bold
      text-shadow: 2px 4px 2px rgba(0, 0, 0, 0.25);
      @media (max-width 768px)
        font-size 24px

    .description-mini
      color #fff
      font-size 24px
      font-weight 500
      max-width 50%
      text-shadow: 2px 4px 2px rgba(0, 0, 0, 0.25);
      @media (max-width 768px)
        box-sizing border-box
        font-size 18px
        max-width 100%

    .description
      color #fff
      font-size 18px
      font-weight 500
      text-shadow 1px 2px 2px rgba(0, 0, 0, 0.25), 0 -2px 5px rgba(0, 0, 0, 0.25)
      width 100%
      @media (max-width 768px)
        font-size 14px
        padding 0

.other-products
  box-sizing border-box
  display block
  margin 0 auto
  max-width 1300px
  padding 0 65px 20px
  width 100%
  @media (max-width 768px)
    padding 20px 0

  .title
    font-size 24px
    font-weight bold
    text-align center
    @media (max-width 768px)
      font-size 18px
      padding 0 20px

  .products
    margin 0 auto

