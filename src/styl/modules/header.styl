.header
  align-items center
  background linear-gradient(180deg, #000 0%, rgba(0, 0, 0, 0) 100%)
  display flex
  flex-basis 100%
  height 100px
  justify-content space-between
  left 0
  position absolute
  top 0
  transition all .2s
  width 100%
  z-index 100
  @media (max-width 768px)
    height 70px

  &_other
    background none
    background-color #365BA0
    position relative

  &.menu-show
    background-color #365BA0
    transition all .4s

.ekos-nav-menu
  display flex
  flex 1
  @media (max-width 768px)
    display none

  .nav-menu
    align-items flex-start
    display flex
    flex-wrap wrap
    justify-content flex-start
    margin-left 0

    .menu-item
      border-bottom 6px solid transparent
      list-style none
      margin 0 15px
      padding-bottom 5px

      a
        color #fff
        font-size 16px
        font-weight 500
        text-decoration none

      &.current-menu-item
      &:hover
        border-bottom 6px solid #81B0DA

.logo
  flex-basis 135px
  margin-left 60px
  @media (max-width 768px)
    flex-basis 100px
    margin-left 20px
    width 100px

.contact-number
  color #fff
  font-size 24px
  font-weight 500
  margin-right 90px
  text-decoration none
  width 225px
  @media (max-width 540px)
    display none
  @media (max-width 768px)
    margin-right 20px

.humb-menu
  display none
  @media (max-width 768px)
    background none
    display block
    height 25px
    margin-right 20px
    padding 0
    width 25px

    input
      height 25px
      margin 0
      opacity 0
      position absolute
      width 25px
      z-index 1

      &:checked ~
        .item1
          transform rotate(45deg) translate(1px)
        .item2
          opacity 0
        .item3
          transform rotate(-45deg) translate(2px)

    .humb-item
      background-color #fff
      display block
      height 3px
      margin 5px 0
      transition all .2s cubic-bezier(.08,.81,.87,.71)
      width 100%

      &.item1
        transform-origin 4px 0
      &.item3
        transform-origin bottom left

.mobile-menu
  display none

@media (max-width 768px)
  .mobile-menu
    background-color #365BA0
    box-sizing border-box
    display block
    max-width 540px
    padding 20px
    position fixed
    right -540px
    top 70px
    transition all .2s
    width 100vw
    z-index 99999

    &.show
      box-shadow 2px 2px 5px #5f5a5a
      display block
      position absolute
      right 0
      transition right .4s

    @media (max-width 540px)
      right -100vw

    .menu
      align-items flex-start
      display flex
      flex-direction column

      .contact-number
        display block
        margin-right 0

      .ekos-nav-menu
        display flex

        .nav-menu
          flex-direction column
          padding 0

          .menu-item
            margin 0
            margin-top 10px
